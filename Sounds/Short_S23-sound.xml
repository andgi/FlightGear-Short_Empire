<PropertyList>

 <!--
   x/y/z == back/left/up
   Coordinate system origin at the 3d model origin, i.e. at the FDM origin.
 -->
 
 <fx>

  <!-- ========================================================================
    Engine 1. (Port outer)
  -->
  <crank>
   <name>engstart1</name>
   <path>Sounds/engstart.wav</path>
   <condition>
    <property>engines/engine[0]/cranking</property>
   </condition>
   <position>
    <!-- x/y/z == back/left/up -->
    <x>  6.31 </x>
    <y>  7.96 </y>
    <z>  2.91 </z>
   </position>
   <volume>
    <offset>0.1</offset>
    <max>0.01</max>
   </volume>
  </crank>

  <crank>
   <name>crank1</name>
   <mode>looped</mode>
   <path>Sounds/cranking.wav</path>
   <condition>
    <and>
     <property>engines/engine[0]/cranking</property>
     <not>
      <property>engines/engine[0]/running</property>
     </not>
    </and>
   </condition>
   <position>
    <!-- x/y/z == back/left/up -->
    <x>  6.31 </x>
    <y>  7.96 </y>
    <z>  2.91 </z>
   </position>
   <volume>
    <offset>0.5</offset>
   </volume>
  </crank>

  <crank>
   <name>cough1</name>
   <path>Sounds/coughing.wav</path>
   <condition>
    <property>engines/engine[0]/running</property>
   </condition>
   <position>
    <!-- x/y/z == back/left/up -->
    <x>  6.31 </x>
    <y>  7.96 </y>
    <z>  2.91 </z>
   </position>
   <volume>
    <offset>0.3</offset>
   </volume>
  </crank>

  <engine>
   <name>engine1 external</name>
   <mode>looped</mode>
   <path>Aircraft/Boeing314/Sounds/engine_running.wav</path>
   <condition>
    <and>
     <property>engines/engine[0]/running</property>
     <greater-than-equals>
      <property>engines/engine[0]/mp-inhg</property>
      <value>6.0</value>
     </greater-than-equals>
    </and>
   </condition>
   <position>
    <!-- x/y/z == back/left/up -->
    <x>  6.31 </x>
    <y>  7.96 </y>
    <z>  2.91 </z>
   </position>
   <volume>
    <property>engines/engine[0]/mp-inhg</property>
    <factor>0.0095</factor>
    <min>0.02</min>
    <max>0.30</max>
    <offset>0.07</offset>
   </volume>
   <pitch>
    <property>engines/engine[0]/rpm</property>
    <factor>0.0004</factor>
    <min>0.1</min>
    <max>2.0</max>
    <offset>0.3</offset>
   </pitch>
  </engine>

  <engine>
